<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.bnp</groupId>
		<artifactId>API_PROXY</artifactId>
		<version>1.0.0-0-SNAPSHOT</version>
	</parent>
	<groupId>com.bnp</groupId>
	<artifactId>CSERVICES_PROXY_EAR</artifactId>
	<packaging>ear</packaging>

	<properties>
		<buildNumber>${maven.build.timestamp}</buildNumber>
		<application-properties.includeExtensions>.properties, .xml,
			.annotationprovider</application-properties.includeExtensions>
		<application-properties.version>1.11</application-properties.version>
	</properties>

	<dependencies>
		<!-- Application dependencies -->
		<dependency>
			<groupId>com.bnp</groupId>
			<artifactId>CSERVICES_PROXY_WAR</artifactId>
			<version>1.0.0-0-SNAPSHOT</version>
			<type>war</type>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.10.1</version>
				<configuration>
					<skinnyWars>true</skinnyWars>
					<generateApplicationXml>true</generateApplicationXml>
					<applicationXml>
						${project.build.directory}/application.xml</applicationXml>
					<applicationId>CSERVICES_PROXY_WAR</applicationId>
					<applicationName>CSERVICES_PROXY_WAR</applicationName>
					<displayName>CSERVICES_PROXY_WAR</displayName>
					<description>CSERVICES_PROXY_WAR</description>
					<modules>
						<webModule>
							<groupId>com.bnp</groupId>
							<artifactId>CSERVICES_PROXY_WAR</artifactId>
							<contextRoot>${contextRoot.pres}</contextRoot>
							<bundleFileName>CSERVICES_PROXY_WAR.war</bundleFileName>
						</webModule>
					</modules>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>valid-version-and-create-ref-version</id>
						<goals>
							<goal>regex-property</goal>
						</goals>
						<phase>generate-resources</phase>
						<configuration>
							<name>project.ref.version</name>
							<value>${project.version}</value>
							<regex>^(\d[\d\.]+\d+)-([\d]+)(-SNAPSHOT)?$</regex>
							<replacement>$1-0$3</replacement>
							<failIfNoMatch>true</failIfNoMatch>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>filter-applicationProperties.xml</id>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<phase>generate-resources</phase>
						<configuration>
							<outputDirectory>${project.build.directory}</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}/src/main/assembly/manifest/</directory>
									<includes>
										<include>applicationProperties.xml</include>
									</includes>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.bpc.cij.plugins</groupId>
				<artifactId>application-properties-maven-plugin</artifactId>
				<version>${application-properties.version}</version>
				<configuration>
					<applicationProperties>${project.build.directory}/applicationProperties.xml</applicationProperties>
					<environment>DEV</environment>
					<realSourceDir>${project.basedir}/src/main/assembly/shared</realSourceDir>
					<source>${project.basedir}/src/main/assembly/shared</source>
					<target>${project.build.outputDirectory}</target>
					<includeExtensions>${application-properties.includeExtensions}</includeExtensions>
					<encoding>${application-properties.encoding}</encoding>
				</configuration>
				<executions>
					<execution>
						<id>verify-ALL-and-create-shared-for-DEV</id>
						<goals>
							<goal>verify</goal>
							<goal>valorize</goal>
						</goals>
					</execution>
					<execution>
						<id>shared-for-INT-when-no-ARA</id>
						<phase>package</phase>
						<configuration>
							<applicationProperties>${project.build.directory}/applicationProperties.xml</applicationProperties>
							<environment>INT</environment>
							<realSourceDir>${project.basedir}/src/main/assembly/shared</realSourceDir>
							<source>${project.basedir}/src/main/assembly/shared</source>
							<target>${project.build.directory}/shared/INT</target>
						</configuration>
						<goals>
							<goal>valorize</goal>
						</goals>
					</execution>
					<execution>
						<id>shared-for-REC-when-no-ARA</id>
						<phase>package</phase>
						<configuration>
							<applicationProperties>${project.build.directory}/applicationProperties.xml</applicationProperties>
							<environment>REC</environment>
							<realSourceDir>${project.basedir}/src/main/assembly/shared</realSourceDir>
							<source>${project.basedir}/src/main/assembly/shared</source>
							<target>${project.build.directory}/shared/REC</target>
						</configuration>
						<goals>
							<goal>valorize</goal>
						</goals>
					</execution>
					<execution>
						<id>shared-for-PPROD-when-no-ARA</id>
						<phase>package</phase>
						<configuration>
							<applicationProperties>${project.build.directory}/applicationProperties.xml</applicationProperties>
							<environment>PPROD</environment>
							<realSourceDir>${project.basedir}/src/main/assembly/shared</realSourceDir>
							<source>${project.basedir}/src/main/assembly/shared</source>
							<target>${project.build.directory}/shared/PPROD</target>
						</configuration>
						<goals>
							<goal>valorize</goal>
						</goals>
					</execution>
					<execution>
						<id>shared-for-PROD-when-no-ARA</id>
						<phase>package</phase>
						<configuration>
							<applicationProperties>${project.build.directory}/applicationProperties.xml</applicationProperties>
							<environment>PROD</environment>
							<realSourceDir>${project.basedir}/src/main/assembly/shared</realSourceDir>
							<source>${project.basedir}/src/main/assembly/shared</source>
							<target>${project.build.directory}/shared/PROD</target>
						</configuration>
						<goals>
							<goal>valorize</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.5.3</version>
				<executions>
					<execution>
						<id>createDeliverables-when-no-ARA</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<descriptors>
								<descriptor>src/main/assembly/assembly-shared-INT.xml</descriptor>
								<descriptor>src/main/assembly/assembly-shared-REC.xml</descriptor>
								<descriptor>src/main/assembly/assembly-shared-PPROD.xml</descriptor>
								<descriptor>src/main/assembly/assembly-shared-PROD.xml</descriptor>
								<descriptor>src/main/assembly/assembly-adm.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
					<execution>
						<id>createDeliverables</id>
						<phase>deploy</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<attach>false</attach>
							<descriptors>
								<descriptor>src/main/assembly/assembly-manifest.xml</descriptor>
								<descriptor>src/main/assembly/assembly-shared.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
